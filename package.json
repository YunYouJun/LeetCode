{
  "name": "leetcode",
  "type": "module",
  "version": "1.0.1",
  "private": true,
  "packageManager": "pnpm@8.9.0",
  "workspaces": [
    "packages/*"
  ],
  "description": "LeetCode Practice",
  "author": {
    "email": "me@yunyoujun.cn",
    "name": "云游君",
    "url": "https://www.yunyoujun.cn"
  },
  "license": "MIT",
  "repository": "https://github.com/YunYouJun/LeetCode.git",
  "scripts": {
    "build": "npm run generate:TOC && cp public/* dist",
    "build:cli": "pnpm -C packages/cli build",
    "dev": "npm run test",
    "generate:TOC": "tsx ./packages/cli/src/index.ts generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "tsx ./packages/cli/src/index.ts start",
    "solve": "tsx ./packages/cli/src/index.ts solve",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@yunyoujun/logger": "^0.3.5",
    "commander": "^11.0.0",
    "inquirer": "^9.2.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.0.0-beta.26",
    "@types/inquirer": "^9.0.4",
    "@types/node": "^20.8.4",
    "eslint": "^8.51.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.6",
    "zx": "^7.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  }
}
