{
  "name": "leetcode",
  "type": "module",
  "version": "1.0.1",
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "workspaces": [
    "packages/*"
  ],
  "description": "LeetCode Practice",
  "author": {
    "email": "me@yunyoujun.cn",
    "name": "云游君",
    "url": "https://www.yunyoujun.cn"
  },
  "license": "MIT",
  "repository": "https://github.com/YunYouJun/LeetCode.git",
  "scripts": {
    "build": "npm run generate:TOC && cp public/* dist",
    "build:cli": "pnpm -C packages/cli build",
    "generate:TOC": "tsx ./packages/cli/src/index.ts generate",
    "lint": "eslint .",
    "start": "tsx ./packages/cli/src/index.ts start",
    "solve": "leet solve",
    "test": "vitest"
  },
  "dependencies": {
    "@yunyoujun/leetcode": "./packages/cli",
    "@yunyoujun/logger": "^0.3.5",
    "commander": "^10.0.1",
    "inquirer": "^9.2.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.2.3",
    "eslint": "^8.41.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.1",
    "vitest": "^0.31.1",
    "zx": "^7.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  }
}
